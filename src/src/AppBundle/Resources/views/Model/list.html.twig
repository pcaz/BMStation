<!--  must be included in another template -->
<div class="container">
<section class="col-sm-10">
<table class="table table-bordered table-condensed list-image"style="width:80%;">
<thead>
	<th style="text-align:center;">{{ 'name'|trans }}</th>
	<th style="text-align:center;">{{ 'series'|trans }}</th>
	<th style="text-align:center;">{{ 'description'|trans }}</th>
	<th class="image"><img src="{{ asset('images/modify.png') }}"/>{{ 'modify'|trans }}<br/>
	<img src="{{ asset('images/delete.png') }}" />{{ 'delete'|trans }}
	</th>
</thead>
<tbody>
	{% for mod in models %}
	<tr>
	<td style="width:30%;">{{ mod.name }}</td>
	<td style="width:10%;">{{ mod.series.name }}</td>
	<td style="width:45%;">{{ mod.description }}</td>
	<td class="image"><img src={{ asset('images/modify.png') }}  onclick="modify('{{ path('model_modify', { 'id': mod.id }) }}')"/>
	<img src={{ asset('images/delete.png') }}  onclick="del('{{ path('model_delete', { 'id': mod.id }) }}')"/></td>
	</tr>
	{% else %}
	<p>{{ 'no_model' | trans  }}</p>
	{% endfor %}	
</tbody>
</table>
{{ knp_pagination_render(models) }}
</section>
</div> <!-- container -->
<script>
function modify(path){
    var val=path;
    
	document.location.href=path;
}

function del(path){

	if(confirm('Etes vous sur de vouloir effacer ce model ?')){
		document.location.href=path
		}

}
</script>
		
	