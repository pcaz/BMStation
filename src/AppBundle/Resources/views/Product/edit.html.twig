	<script type="text/javascript" src="{{ asset('js/image.js')}}"></script>
<script>
$(document).ready(function(){
	$(".loading").hide();
	$(".wait").hide();
    });
</script>
{% endblock %}
{% block content %}



<H1>{{title | trans}} </H1>
 
<div class="center">
<div class="img-small">
