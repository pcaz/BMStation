	<input type="radio" id="userSeriesModel_name_{{loop.index}}" name="userSeriesModel[name]" required="required" value="{{ ss.id }}"/>{{ ss.name }}
{% endfor %}
{% endif %}
</div> <!--  series-name -->
<div class='hidden'>
{{ form_row(form.model.nameSeries) }}
{{ form_row(form.model.nameModel) }}
</div> <!-- hidden -->

{% autoescape false %}
